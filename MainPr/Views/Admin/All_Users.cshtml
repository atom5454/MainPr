@model IEnumerable<MainPr.Models.User>
@{
    ViewBag.Title = "Users List";
}


    <a class="av" asp-controller="Admin" asp-action="CreateUser">Добавить пользователя</a>

    <table class="table">
        <tr><th>Email</th><th>Год</th><th></th></tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Login</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="EditUser" asp-route-id="@user.Id">Изменить</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    