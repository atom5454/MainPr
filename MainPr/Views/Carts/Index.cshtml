@model IEnumerable<MainPr.Models.Cart>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Номер корзины
            </th>
            <th>
                Статус корзины
            </th>
            <th>
                Название товара
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CartID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusCarts.StatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Orders.Items.ItemName)
            </td>
        </tr>
        }
    </tbody>
</table>
