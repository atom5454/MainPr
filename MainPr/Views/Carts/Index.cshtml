@model IEnumerable<MainPr.Models.Cart>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StatusCarts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders.ItemID)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusCarts.StatusName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Orders.Items.ItemName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CartID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CartID">Details</a> |
                    <a asp-action="Delete" asp-route-idcart="@item.CartID" asp-route-iditem="@item.ItemID" asp-route-iduserorder="@item.UsersOrderID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
