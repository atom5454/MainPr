@model IEnumerable<MainPr.Models.Cart>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Count_item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusCarts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Count_item)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Items.ItemID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusCarts.StatusCartID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Orders.OrderID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemID" asp-route-order="@item.OrderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ItemID" asp-route-order="@item.OrderID" >Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemID" asp-route-order="@item.OrderID" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
