@model IEnumerable<MainPr.Models.Orders>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CountBuy_item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsersOrders)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CountBuy_item)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Items.ItemID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsersOrders.UsersOrderID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ItemID" asp-route-userId="@item.UsersOrderID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.ItemID" asp-route-userId="@item.UsersOrderID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p><a class="btn btn-sm btn-dark" asp-controller="Carts" asp-action="AddToCart">AddToCart</a></p> 